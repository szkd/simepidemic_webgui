{
    "info": {
        "formname": "sim-settings",
        "title_cls": "param-title",
        "option-container": "display: flex; flex-wrap: wrap; margin-top: 10px; justify-content: flex-start",
        "option-cls": "inline-block margin-right",
        "option-style": "flex-grow: 1;",
        "file-attr": {
            "type": "file",
            "accept": ".json, application/json",
            "style": "display:none;"
        }
    },
    "sections": {
        "world": {
            "label": "世界",
            "type": "radio",
            "name": "sim-world",
            "options": [
                {
                    "label": "既定世界",
                    "value": "default",
                    "checked": "checked"
                },
                {
                    "value": "new",
                    "label": "新規生成"
                }
            ]
        },
        "param": {
            "label": "パラメータ",
            "type": "radio",
            "name": "sim-param",
            "file-id": "sim-param-file",
            "options": [
                {
                    "checked": "checked",
                    "label": "パラメータタブの値を使用",
                    "value": "tab",
                    "onchange": "settings('param', this);"
                },
                {
                    "label": "ファイルから読み込む",
                    "file": "JSONファイルを選択",
                    "file-onchange": "settings('param-file', this);",
                    "value": "file"
                }
            ]
        },
        "scenario": {
            "label": "シナリオ",
            "type": "radio",
            "name": "sim-scenario",
            "file-id": "sim-scenario-file",
            "options": [
                {
                    "label": "使用しない",
                    "checked": "checked",
                    "value": "disabled",
                    "onchange": "settings('scenario', this);"
                },
                {
                    "label": "シナリオタブの値を使用",
                    "value": "tab",
                    "onchange": "settings('scenario', this);"
                },
                {
                    "label": "ファイルから読み込む",
                    "value": "file",
                    "file": "JSONファイルを選択",
                    "file-onchange": "settings('scenario-file', this);"
                }
            ]
        }
    }
}
